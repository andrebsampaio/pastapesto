<?xml version="1.0" encoding="utf-8"?>
<android.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/pasta_holder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FAECA5"
            android:gravity="center"
            android:layout_weight="0.5"
            android:onClick="pastaClicked">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/pasta_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="64sp"
                android:text="Pasta"/>
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/pesto_holder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="#7F761C"
            android:onClick="pestoClicked">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/pesto_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="64sp"
                android:text="Pesto"/>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/next_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="@android:color/white"
        android:layout_gravity="center"
        android:textColor="@android:color/black" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/total_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="8dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="8dp"
        android:text="60"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold" />
</android.widget.FrameLayout>